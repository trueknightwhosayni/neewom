<h1>Users</h1>
<%= link_to 'New User', new_user_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>
  <% @collection.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.role %></td>
      <td>
        <%= link_to 'Edit', edit_user_path(user) %>
        <%= link_to 'Delete', user_path(user), method: :delete %>
      </td>
    <td>
  <% end %>
</table>
